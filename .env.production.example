# Configuración de Producción - Sistema de Rifas
# IMPORTANTE: Cambiar todos estos valores antes del deploy

# Base de datos PostgreSQL (CAMBIAR EN PRODUCCIÓN)
DATABASE_URL="postgresql://usuario_prod:password_super_seguro@host_db:5432/rifas_prod?schema=public&sslmode=require"

# JWT Secret (GENERAR UNO NUEVO CON 32+ CARACTERES)
JWT_SECRET="tu-jwt-secret-de-produccion-super-seguro-256-bits-minimo"

# URLs de la aplicación
NEXTAUTH_URL="https://tudominio.com"
APP_URL="https://tudominio.com"

# Configuración de la aplicación
APP_NAME="Sistema de Rifas"
APP_ENV="production"
NODE_ENV="production"

# Email (configurar proveedor)
SMTP_HOST="smtp.tuproveedor.com"
SMTP_PORT="587"
SMTP_USER="tu_email@tudominio.com" 
SMTP_PASSWORD="tu_password_smtp"
FROM_EMAIL="rifas@tudominio.com"

# Pagos (configurar cuando se implemente)
# MERCADOPAGO_ACCESS_TOKEN=""
# MERCADOPAGO_PUBLIC_KEY=""
# PAYPAL_CLIENT_ID=""
# PAYPAL_CLIENT_SECRET=""
# PAYPAL_ENV="live" # o "sandbox"

# Configuración de seguridad
COOKIE_SECURE="true"
COOKIE_SAME_SITE="strict"
SESSION_TIMEOUT="86400" # 24 horas

# Analytics y monitoreo (opcional)
# GOOGLE_ANALYTICS_ID=""
# SENTRY_DSN=""

# Rate limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="900000" # 15 minutos

# SMS (configurar proveedor)
SMS_PROVIDER="twilio"
SMS_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SMS_AUTH_TOKEN="your_auth_token"
SMS_FROM="+1234567890"

# Contacto de administradores
ADMIN_EMAIL="admin@tudominio.com"
ADMIN_PHONE="+1234567890"
